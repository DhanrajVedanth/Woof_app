<%= simple_form_for(@post) do |f| %>
<%= f.error_notification %>
<div class="field">
  <div class="control">
    <%= f.input :post, input_html: { class: "textarea "}, wrapper: false, label_html: {class: "label"}, placeholder: "What's on your mind?", autofocus: true, label: false %>
  </div>
</div>
<%= f.button :submit, class: "button is-info" %>
<% end %>